<Window x:Class="WpfApp1.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Inventory Info" Height="600" Width="800"
        WindowState="Maximized">
    <Grid>
        <Image Source="C:\Users\Law Yi Yang\Downloads\WpfApp1\WpfApp1\Resources\Delete.png" Stretch="Fill"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Delete Inventory Info" Foreground="White" FontSize="44" FontWeight="Bold" Margin="0,0,0,20" />
            <TextBox x:Name="RobotIDTextBox" Width="200" Margin="0,5,0,20" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="   Enter RobotID" />
            <Button Content="Delete" FontSize="24" Padding="3" Margin="0,2,0,20" Background="#00000000" BorderBrush="White" Foreground="White" Click="DeleteButton_Click" />
            <Button Content="Back" FontSize="24" Padding="3" Margin="0,2" Background="#00000000" BorderBrush="White" Foreground="White" Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>